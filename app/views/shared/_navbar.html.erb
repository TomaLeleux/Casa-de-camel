<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to camels_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "https://static.pratique.fr/images/unsized/ch/chameau.jpg", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->


    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.nil? || current_user.photo.blank? %>
        <%= image_tag "", class: "avatar dropdown-toggle fa fa-user",alt:"", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= cl_image_tag current_user.photo, height: 300, width: 400, crop: :fill, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% if user_signed_in? %>
          <li>
            <%= link_to dashboard_path do %>
              <i class="fa fa-list-alt"></i> <%= t(".dashboard", default: "Dashboard") %>
            <% end %>
          </li>
          <li>
            <%= link_to bookings_path do %>
            <i class="fa fa-address-book"></i> <%= t(".booking", default: "Booking") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="fa fa-cog"></i> <%= t(".account", default: "Account") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i> <%= t(".logout", default: "Logout") %>
            <% end %>
          </li>
          <% else %>
          <li>
            <%= link_to new_user_session_path do %>
            <i class="fa fa-sign-in"></i> <%= t(".Login", default: "Login") %>
            <% end %>
          </li>

          <% end %>

        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

        <% if user_signed_in? %>
          <li>
            <%= link_to dashboard_path do %>
              <i class="fa fa-list-alt"></i> <%= t(".dashboard", default: "Dashboard") %>
            <% end %>
          </li>
          <li>
            <%= link_to bookings_path do %>
            <i class="fa fa-address-book"></i> <%= t(".booking", default: "Booking") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="fa fa-cog"></i> <%= t(".account", default: "Account") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i> <%= t(".logout", default: "Logout") %>
            <% end %>
          </li>
          <% else %>
          <li>
            <%= link_to new_user_session_path do %>
            <i class="fa fa-sign-in"></i> <%= t(".Login", default: "Login") %>
            <% end %>
          </li>

          <% end %>

      </ul>
    </div>
  </div>
</div>
