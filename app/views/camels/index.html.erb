
<h1>Camehamemel</h1>
<div class="search-bar">
  <%= form_tag camels_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find something"
    %>
  <% end %>
</div>
<div>
<% @camels.each do |camel| %>
<%= render 'card', camel: camel %>
<% end %>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
