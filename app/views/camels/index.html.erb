<h1>Camels#index</h1>
<div class="search-bar">
  <input type="text" id="search_bar"></input>
</div>
<div>
<% @camels.each do |camel| %>
<%= render 'card', camel: camel %>
<% end %>
</div>
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>

<%= link_to "Add a camel", new_camel_path, class: "cbtn camel" %>
<%= link_to "Edit a camel", "/camels/1/edit" %>
<hr>
<%= link_to "Back to the index", root_path %>

