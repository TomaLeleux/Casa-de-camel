<div class="container-show">
  <h1><%= @camel.name %></h1>
  <div class="grid">
    <div class="photo">
      <%= cl_image_tag @camel.photo, class: "picture-show" %>
    </div>
    <div class="description">
      <h3>Description </h3>
      <%= @camel.description %>
      <h3>Price / Day </h3>

      <div class="price"> <%= @camel.price_per_day %> $</div>
    </div>

    <div class="carac">

      <i class="fas fa-users"> Places : <%= @camel.number_of_place %> </i>
      <i class="fab fa-apple"> Food Type: <%= @camel.food_type %></i>
      <i class="fas fa-paint-brush"> Color: <%= @camel.color %> </i>
      <% if @camel.wifi %>
      <i class="fas fa-wifi"> Wifi</i>
      <% else %>
      <i class="fas fa-times-circle"> No Wifi </i>
      <% end %>
      <i class="fas fa-battery-three-quarters">Fiscal camels : <%= @camel.chameaux_fiscaux %> fc</i>
      <i class="fab fa-accessible-icon">Max speed : <%= @camel.vitesse_max %> kmh</i>
    </div>
    <div class="booking">
      <% if user_signed_in? %>
      <div class="total-price">
          <span id="total"></span>
      </div>
        <%= simple_form_for [@camel, @booking] do |f| %>
          <%= f.input :date_start, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y')} %>
          <%= f.input :date_end, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d/%m/%Y') } %>
          <%= f.submit "Bouc your camel", class: "btn btn-primary" %>
  <!-- 'data-date-dates-disabled': @book -->
        <% end %>
      <% else %>
        <div class="Info-login text-center">
          <div class="info">
          You need to be logged to rent a Camel.
          </div>
          <div class="path-redirect">
          <%= link_to "login", new_user_session_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
      <div>
        <div class="edit_camel">
          <% if policy(@camel).edit? %>
            <%= link_to "Edit #{@camel.name}", edit_camel_path, class: "cbtn camel" %>
          <% end %>
        </div>
        <div id="back">
          <%= link_to "Back to the camels", camels_path, id: "back", class: "cbtn camel" %>
        </div>
      </div>
    </div>

    <div class="map">
      <%= cl_image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{@camel.latitude}, #{@camel.longitude}&zoom=16&size=600x300&maptype=hybrid&markers=color:red%7Clabel:C%7C#{@camel.latitude}, #{@camel.longitude}&key=AIzaSyCGd4LW3sY44cZqiXGYPVJzlI2iCcMkfks" %>
    </div>

  </div>

  <div id="reviews">
    <% if @camel.reviews.blank? %>
      Be the first to leave a review for <%= @camel.name %>
    <% else %>
      <% @camel.reviews.each do |review| %>
        <%= render 'reviews/show', review: review %>
      <% end %>
    <% end %>
  </div>
  <%= render 'reviews/form', camel: @camel, review: @review %>
</div>
