<div class="container text-center ">
  <h1>Edit your booking</h1>

  <%= simple_form_for @booking do |f| %>
    <%= f.input :date_start, as: :string, input_html: { class: "datepicker", value: @booking.date_start.strftime('%d/%m/%Y') } %>
    <%= f.input :date_end, as: :string, input_html: { class: "datepicker", value: @booking.date_end.strftime('%d/%m/%Y') } %>
    <%= f.submit 'Save changes', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to "Back to bookings", bookings_path, class: 'btn btn-primary' %>
</div>
